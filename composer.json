{
	"name": "weavephp/error-whoops",
	"description": "Weave glue-framework Whoops Error adaptor",
	"type": "weave-adaptor",
	"keywords" : ["weave", "error", "adaptor"],
	"license": "MIT",
	"authors": [
		{
			"name": "Robert Goldsmith",
			"email": "r.s.goldsmith@far-blue.co.uk"
		}
	],
	"require": {
		"php": "^8.0 | ^8.1",
		"filp/whoops": "2.*"
	},
	"require-dev": {
		"weavephp/weave": "^2.0.0",
		"squizlabs/php_codesniffer": "^3.0",
		"phpunit/phpunit": "^9.0",
		"phan/phan": "^5.0"
	},
	"autoload": {
		"psr-4": {
			"Weave\\Error\\Whoops\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Weave\\Error\\Whoops\\": "tests/"
		}
	},
	"scripts": {
		"phpcs": "phpcs",
		"phpunit": "phpunit",
		"phan": "phan -po analysis.txt"
	}
}
